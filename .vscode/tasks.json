{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "process",
      "command": "bin/busybox.exe",
      "args": [
        "bash",
        "scripts/build.sh"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "revealProblems": "onProblem"
      }
    },
    {
        "label": "Build Go (Windows)",
        "type": "process",
        "command": "go",
        "args": [
          "build",
          "-o",
          "../bin/ProcessTemplates.exe",
          "ProcessTemplates.go"
        ],
        "group": "build",
        "presentation": {
          "reveal": "silent",
          "showReuseMessage": false,
          "revealProblems": "onProblem"
        },
        "options": {
          "cwd": "ProcessTemplates",
          "env": {
            "GOOS": "windows",
            "GOARCH": "amd64"
          }
        }
    },
    {
      "label": "Update Mod",
      "command": "scripts/UpdateDoombubblesTweaks.bat",
      "args": ["-y"],
      "type": "process",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "showReuseMessage": false,
        "clear": true,
        "close": true
      }
    },
    {
      "label": "Process Templates",
      "type": "process",
      "command": "bin/ProcessTemplates.exe",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "revealProblems": "onProblem"
      },
    },
    {
      "label": "Enable Hot Reload",
      "type": "process",
      "command": "bin/busybox.exe",
      "args": [
        "bash",
        "scripts/symlinks_create.sh"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Disable Hot Reload",
      "type": "process",
      "command": "bin/busybox.exe",
      "args": [
        "bash",
        "scripts/symlinks_delete.sh"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Process Hot Reload",
      "type": "process",
      "command": "bin/busybox.exe",
      "args": [
        "bash",
        "scripts/hotreload.sh",
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "revealProblems": "onProblem"
      }
    },
    {
        "label": "Build Go (Linux)",
        "type": "process",
        "command": "go",
        "args": [
          "build",
          "-o",
          "../bin/ProcessTemplates",
          "ProcessTemplates.go"
        ],
        "group": "build",
        "presentation": {
          "reveal": "silent",
          "showReuseMessage": false,
          "revealProblems": "onProblem"
        },
        "options": {
          "cwd": "ProcessTemplates",
          "env": {
            "GOOS": "linux",
            "GOARCH": "amd64"
          }
        }
    },
  ]
}
