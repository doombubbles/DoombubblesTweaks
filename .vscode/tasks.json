{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "command": "bg3-modders-unitool.exe",
      "args": [
        "./DoombubblesTweaks",
        "${userHome}/AppData/Local/Larian Studios/Baldur's Gate 3/Mods"
      ],
      "type": "process",
      "group": "build",
      "isBuildCommand": true,
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true,
        "close": true,
      }
    },
    {
      "label": "Update Mod",
      "command": "UpdateDoombubblesTweaks.bat",
      "args": ["-y"],
      "type": "process",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "showReuseMessage": false,
        "clear": true,
        "close": true,
      }
    }
  ]
}