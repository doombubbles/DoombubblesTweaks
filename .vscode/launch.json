{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Current File",
            "type": "auto-debug",
            "request": "launch",
            "map": {
                "*.py": "Python: Current File",
                "*.go": "Go: Launch File",
                "*.tmpl": "Go: Launch Main File"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
        },
        {
            "name": "Go: Launch File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Go: Launch Main File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/ProcessTemplates.go"
        }
    ]
}
